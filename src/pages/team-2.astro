---

<Layout title="Команда">
	<Heading title="Команда" titleSize='lg'></Heading>
	<div class="section p-team">
		<div class="container">
			<div class="p-team__items">
				{items.map((item, index) => (
					<TeamItem class="p-team__item" name={item.name} position={item.position} image={item.image} image2x={item.image2x}></TeamItem>
				))}
			</div>
			<ShowMore class="p-team__show-more" moreText="Наша команда больше чем ты&nbsp;думаешь" buttonText={'Показать всех'} isSelf={true}></ShowMore>
		</div>
	</div>
</Layout>
