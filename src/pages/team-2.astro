	},
	{
		name: "Антон <br>Денисов",
		position: "Технический директор",
		image: "img/team/3.jpg",
		image2x: "img/team/3@2x.jpg 2x",
	},
	{
		name: "Юрий «Компот» <br>Пижанков",
		position: "Генеральный продюсер",
