---
import Button from '@components/modules/Button.astro';
import ProjectItem from '@components/blocks/ProjectItem.astro';
import ShowMore from '@components/blocks/ShowMore.astro';
import TabMenu from '@components/blocks/TabMenu.astro';

interface Props {
	type?: "home" | "page" | "similar" | "examples";
    isHeading?: boolean;
    isAmount?: boolean;
    isTabMenu?: boolean;
    isMore?: boolean;
    isDescription?: boolean;
    isInfo?: boolean;
    title?: string;
    moreText?: string;
    class?: string;
    [x: string]: any;
}

const {
    isHeading = true,
    isAmount = false,
    isTabMenu = false,
    isMore = true,
    list = [],
    type,
    title,
    moreText,
    isDescription,
	isInfo,
    class: className,
    ...rest
} = Astro.props;

const pathImage = type == 'similar' ? 'similar-projects' : type == 'examples' ? 'work-examples' : 'portfolio';

const portfolioList = [
	{
		title: "Газпромбанк. Вклады. Рекламный ролик",
		category: "Проморолик",
		tags: ["Съемка", "Графика", "Монтаж"],
	},
	{
		title: "Культура и&nbsp;образование в&nbsp;партнерстве с&nbsp;Samsung",
		category: "Клип",
		tags: ["2D", "HR-видео"],
		isVideo: true
	},
	{
		title: "Кейс о&nbsp;проекте: Контент для концертного тура Алсу",
		category: "Презентация",
		tags: ["Графика", "Монтаж"],
		isVideo: true
	},
	{
		title: "Herbalife Крем-суп. Продуктовый ролик",
		category: "Продакшен",
		tags: ["Съемка", "Монтаж", "3D"],
		
	}
]

const listPrint = list.length ? list : portfolioList;

const tabList = ['Все', 'Продакшн', 'Графика', 'Бэкстейджи', 'Мероприятия', '2D', '3D', 'Сериал', 'Спецэффекты', 'Монтаж', 'HR-видео', 'Документальный фильм', 'Проморолик']
---

<section 
	class:list={[
		'section portfolio',
		type ? `portfolio_${type}` : '',
		className
	]}
	{...rest}
>
	<div class="container">
		{
			isHeading ? 
			<div class="portfolio__heading">
				<h2 
				class:list={[
					"portfolio__title section-title",
					type === 'home' ? 'section-title_size_lg' : ''
				]}>{title}</h2>
				{
					isAmount ? <div class="portfolio__amount">
					<div class="portfolio__amount-box">
						<div class="portfolio__amount-number">
							<span class="portfolio__amount-number-hidden">270</span>
							<span class="portfolio__amount-number-text anim" data-anim data-anim-number="270">0</span>
						</div>
						<div class="portfolio__amount-text">проектов</div>
					</div>
					<div class="portfolio__amount-circles">
						<svg class="portfolio__amount-circles-icon" width="108" height="108" viewBox="0 0 108 108" fill="none" xmlns="http://www.w3.org/2000/svg">
