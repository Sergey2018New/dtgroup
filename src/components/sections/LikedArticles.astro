---
import Swiper from '@components/modules/swiper/Swiper.astro';
import ArticleItem from '@components/blocks/ArticleItem.astro';

interface Props {
    title?: string;
}

const {
	title,
} = Astro.props;

const articles = [
	{
		title: "Самый зрелищный кейс: трансляция Red Square Cup",
		tags: ["Промо"],
	},
	{
		title: "Кто есть кто на&nbsp;съемочной площадке?",
		tags: ["Маркетинг"],
	},
]

---

<section class:list={[
	"section liked-articles",
]}
>
	<div class="container">
		<div class="liked-articles__inner">
			<h2 class="liked-articles__title section-title" set:html={'Вам понравится'}></h2>
	
			<Swiper class="liked-articles__slider js-liked-articles">
				{articles.map((item, index) => (
					<ArticleItem class="swiper-slide liked-articles__item" title={item.title} tags={item.tags} image={`img/liked-articles/${index + 1}.jpg`} image2x={`img/liked-articles/${index + 1}@2x.jpg 2x`} imageWidth={600} imageHeight={340}></ArticleItem>
				))}
			</Swiper>
		</div>
	</div>
</section>