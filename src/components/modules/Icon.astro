---
interface Props {
    name?: string;
    class?: string;
    [x: string]: any;
}

const {
    name,
    class: className,
    ...rest
} = Astro.props;
---
<svg class:list= {[
        `ui-icon`, 
        `ui-icon-${name}`,
        className
    ]}
    {...rest}
>
    <use xlink:href={'img/icons.svg#' + name}/>
</svg>